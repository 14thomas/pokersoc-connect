<Window x:Class="pokersoc_connect.Views.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" MinWidth="420">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="120"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>

    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" VerticalAlignment="Center" />
    <TextBox x:Name="NameBox" Grid.Row="0" Grid.Column="1" Margin="8,0,0,8" Width="260"/>

    <TextBlock Grid.Row="1" Grid.Column="0" Text="Base price:" VerticalAlignment="Center" />
    <TextBox x:Name="PriceBox" Grid.Row="1" Grid.Column="1" Margin="8,0,0,8" Width="160" />

    <TextBlock Grid.Row="2" Grid.Column="0" Text="Image path:" VerticalAlignment="Center" />
    <TextBox x:Name="ImageBox" Grid.Row="2" Grid.Column="1" Margin="8,0,0,8" Width="260"/>
    <Button Grid.Row="2" Grid.Column="2" Content="Browseâ€¦" Margin="8,0,0,8" Padding="10,4"
            Click="Browse_Click"/>

    <StackPanel Grid.Row="3" Grid.ColumnSpan="3" Orientation="Horizontal"
                HorizontalAlignment="Right" Margin="0,8,0,0">
      <Button Content="Cancel" Margin="0,0,8,0" Padding="12,6" Click="Cancel_Click"/>
      <Button Content="Save" Padding="12,6" IsDefault="True" Click="Save_Click"/>
    </StackPanel>
  </Grid>
</Window>
