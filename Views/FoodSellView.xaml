<UserControl x:Class="pokersoc_connect.Views.FoodSellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="800" MinHeight="600">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Header -->
    <TextBlock Grid.Row="0" Text="Food Sales" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

    <!-- Main Content -->
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="3*"/>
      </Grid.ColumnDefinitions>

      <!-- Left Side: Product Selection and Payment -->
      <StackPanel Grid.Column="0" Margin="0,0,12,0">
        
        <!-- Product Selection -->
        <GroupBox Header="Product Selection" Margin="0,0,0,20" Padding="10">
          <StackPanel>
            <TextBlock Text="Product:" Margin="0,0,0,5"/>
            <ComboBox x:Name="ProductComboBox" Height="30" Margin="0,0,0,10" 
                      SelectionChanged="ProductComboBox_SelectionChanged"/>
            
            <TextBlock Text="Variant:" Margin="0,0,0,5"/>
            <ComboBox x:Name="VariantComboBox" Height="30" Margin="0,0,0,10"
                      SelectionChanged="VariantComboBox_SelectionChanged"/>
            
            <TextBlock Text="Quantity:" Margin="0,0,0,5"/>
            <TextBox x:Name="QuantityTextBox" Height="30" Text="1" Margin="0,0,0,10"
                     TextChanged="QuantityTextBox_TextChanged"/>
            
            <TextBlock Text="Unit Price:" Margin="0,0,0,5"/>
            <TextBlock x:Name="UnitPriceText" FontSize="16" FontWeight="Bold" Foreground="Blue"/>
          </StackPanel>
        </GroupBox>

        <!-- Payment Method -->
        <GroupBox Header="Payment Method" Margin="0,0,0,20" Padding="10">
          <StackPanel>
            <RadioButton x:Name="CashRadioButton" Content="Cash" IsChecked="True" 
                         Checked="PaymentMethod_Changed" Margin="0,0,0,10"/>
            <RadioButton x:Name="ChipRadioButton" Content="Chip" 
                         Checked="PaymentMethod_Changed" Margin="0,0,0,10"/>
            
            <TextBlock Text="Denomination:" Margin="0,10,0,5"/>
            <ComboBox x:Name="DenominationComboBox" Height="30" Margin="0,0,0,10"
                      SelectionChanged="DenominationComboBox_SelectionChanged"/>
            
            <TextBlock Text="Quantity:" Margin="0,0,0,5"/>
            <TextBox x:Name="PaymentQuantityTextBox" Height="30" Text="1" Margin="0,0,0,10"
                     TextChanged="PaymentQuantityTextBox_TextChanged"/>
          </StackPanel>
        </GroupBox>

        <!-- Player Information -->
        <GroupBox Header="Player Information" Margin="0,0,0,20" Padding="10">
          <StackPanel>
            <CheckBox x:Name="NoCardCheckBox" Content="No Card / Anonymous" 
                      Checked="NoCardCheckBox_Changed" Unchecked="NoCardCheckBox_Changed" Margin="0,0,0,10"/>
            
            <TextBlock Text="Player ID:" Margin="0,0,0,5"/>
            <TextBox x:Name="PlayerIdTextBox" Height="30" IsEnabled="True"
                     TextChanged="PlayerIdTextBox_TextChanged"/>
          </StackPanel>
        </GroupBox>

        <!-- Summary -->
        <GroupBox Header="Sale Summary" Padding="10">
          <StackPanel>
            <TextBlock x:Name="ItemTotalText" FontSize="16" Margin="0,0,0,5"/>
            <TextBlock x:Name="PaymentTotalText" FontSize="16" Margin="0,0,0,5"/>
            <TextBlock x:Name="ChangeText" FontSize="16" FontWeight="Bold" Margin="0,5,0,0"/>
          </StackPanel>
        </GroupBox>
      </StackPanel>

      <!-- Right Side: Recent Sales -->
      <GroupBox Grid.Column="1" Header="Recent Sales" Padding="10">
        <ScrollViewer>
          <StackPanel x:Name="RecentSalesPanel"/>
        </ScrollViewer>
      </GroupBox>
    </Grid>

    <!-- Action Buttons -->
    <Grid Grid.Row="2" Margin="0,20,0,0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      
      <Button Grid.Column="0" Content="Back to Catalog" Click="BackToCatalog_Click" 
              Margin="0,0,10,0" Height="40" Background="LightCoral"/>
      <Button Grid.Column="1" Content="Back to Main" Click="BackToMain_Click" 
              Margin="5,0,5,0" Height="40" Background="LightBlue"/>
      <Button Grid.Column="2" x:Name="ConfirmSaleButton" Content="Confirm Sale" 
              Click="ConfirmSale_Click" Margin="10,0,0,0" Height="40" 
              Background="LightGreen" IsEnabled="False"/>
    </Grid>
  </Grid>
</UserControl>