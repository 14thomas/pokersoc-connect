<UserControl x:Class="pokersoc_connect.Views.CashboxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- MAIN CASHBOX VIEW -->
    <Grid x:Name="MainCashboxView" Grid.Row="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="3*"/>
      </Grid.ColumnDefinitions>

      <!-- LEFT SIDE: DENOMINATIONS TABLE -->
      <Grid Grid.Column="0" Margin="12,12,6,12">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Denominations header -->
        <TextBlock Text="Denominations" FontSize="18" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10"/>

        <!-- Custom Denominations table -->
        <StackPanel Grid.Row="1" Background="White">
          <!-- Header Row -->
          <Border BorderBrush="Gray" BorderThickness="1,1,1,1" Background="LightGray">
            <Grid Height="40">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="100"/>
              </Grid.ColumnDefinitions>
              <TextBlock Grid.Column="0" Text="Denomination" FontWeight="Bold" FontSize="14"
                         VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
              <TextBlock Grid.Column="1" Text="Count" FontWeight="Bold" FontSize="14"
                         VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
              <TextBlock Grid.Column="2" Text="Value" FontWeight="Bold" FontSize="14"
                         VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
            </Grid>
          </Border>
          
          <!-- Data Rows -->
          <StackPanel x:Name="CashboxRowsPanel">
            <!-- Rows will be populated dynamically -->
          </StackPanel>
        </StackPanel>

        <!-- Total Cash Panel -->
        <Border Grid.Row="2"
                Margin="0,0,0,0"
                Padding="15,20"
                BorderThickness="1,0,1,1"
                BorderBrush="Gray"
                Background="LightYellow">
          <StackPanel>
            <TextBlock Text="ðŸ’µ" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock Text="Total Cash" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="TotalCashText" Text="$0.00" FontSize="14" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
          </StackPanel>
        </Border>
      </Grid>

      <!-- RIGHT SIDE: 8 BUTTON GRID (2 COLUMNS x 4 ROWS) -->
      <Grid Grid.Column="1" Margin="6,12,12,12">
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Row 1 -->
        <!-- Add Float Button -->
        <Button Grid.Row="0" Grid.Column="0"
                Margin="0,0,5,5"
                Padding="15,20"
                Click="AddFloat_Click"
                BorderThickness="2"
                BorderBrush="Gray">
          <StackPanel>
            <TextBlock Text="ðŸ’°" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock Text="Add Float" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Add starting cash" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
          </StackPanel>
        </Button>

        <!-- Float Info Panel -->
        <Border Grid.Row="0" Grid.Column="1"
                Margin="5,0,0,5"
                Padding="15,20"
                BorderThickness="2"
                BorderBrush="Gray"
                Background="LightGreen">
          <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="ðŸ“Š" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock Text="Float Added" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="FloatAmountText" Text="$0.00" FontSize="14" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
          </StackPanel>
        </Border>

        <!-- Row 2 -->
        <!-- Add Tip Button -->
        <Button Grid.Row="1" Grid.Column="0"
                Margin="0,5,5,5"
                Padding="15,20"
                Click="AddTip_Click"
                BorderThickness="2"
                BorderBrush="Gray">
          <StackPanel>
            <TextBlock Text="ðŸ’¸" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock Text="Add Tip" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Record cash tip received" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
          </StackPanel>
        </Button>

        <!-- Tips Panel -->
        <Border Grid.Row="1" Grid.Column="1"
                Margin="5,5,0,5"
                Padding="15,20"
                BorderThickness="2"
                BorderBrush="Gray"
                Background="Plum">
          <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="ðŸ’¸" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock Text="Tips" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="TipsText" Text="$0.00" FontSize="14" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
          </StackPanel>
        </Border>

        <!-- Row 3 -->
        <!-- Exchange Button -->
        <Button Grid.Row="2" Grid.Column="0"
                Margin="0,5,5,5"
                Padding="15,20"
                Click="Exchange_Click"
                BorderThickness="2"
                BorderBrush="Gray">
          <StackPanel>
            <TextBlock Text="ðŸ”„" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock Text="Exchange" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Swap denominations" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
          </StackPanel>
        </Button>

        <!-- Total Sales Panel -->
        <Border Grid.Row="2" Grid.Column="1"
                x:Name="TotalSalesPanel"
                Margin="5,5,0,5"
                Padding="15,20"
                BorderThickness="2"
                BorderBrush="Gold"
                Background="LightYellow">
          <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="TotalSalesIcon" Text="ðŸ’°" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock x:Name="TotalSalesLabel" Text="Total Sales" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="TotalSalesAmount" Text="$0.00" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0"/>
          </StackPanel>
        </Border>

        <!-- Row 4 -->
        <!-- Empty Button 7 -->
        <Button Grid.Row="3" Grid.Column="0"
                Margin="0,5,5,0"
                Padding="15,20"
                BorderThickness="2"
                BorderBrush="LightGray"
                IsEnabled="False">
          <StackPanel>
            <TextBlock Text="ðŸ“ˆ" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8" Opacity="0.3"/>
            <TextBlock Text="Button 7" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Opacity="0.3"/>
            <TextBlock Text="Coming soon" FontSize="10" HorizontalAlignment="Center" Opacity="0.3"/>
          </StackPanel>
        </Button>

        <!-- Back Button -->
        <Button Grid.Row="3" Grid.Column="1"
                Margin="5,5,0,0"
                Padding="15,20"
                Click="BackToMain_Click"
                BorderThickness="2"
                BorderBrush="Gray"
                Background="LightCoral">
          <StackPanel>
            <TextBlock Text="ðŸ " FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock Text="Back" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Return to main" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
          </StackPanel>
        </Button>
      </Grid>
    </Grid>

    <!-- FLOAT INPUT VIEW -->
    <Grid x:Name="FloatInputView" Grid.Row="0" Visibility="Collapsed">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="3*"/>
      </Grid.ColumnDefinitions>

      <!-- LEFT SIDE: FLOAT INPUT TABLE -->
      <Grid Grid.Column="0" Margin="12,12,6,12">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Float input header -->
        <TextBlock Text="Add Float" FontSize="18" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10"/>

        <!-- Custom Float input table -->
        <Grid Grid.Row="1" Background="White" Margin="0,0,0,5">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>
          
          <!-- Header Row -->
          <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1,1,1,1" Background="#E0E0E0">
            <Grid Height="40">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>
              <TextBlock Grid.Column="0" Text="Denomination" FontWeight="Bold" FontSize="14"
                         VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
              <TextBlock Grid.Column="1" Text="Count" FontWeight="Bold" FontSize="14"
                         VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
              <TextBlock Grid.Column="2" Text="Value" FontWeight="Bold" FontSize="14"
                         VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
            </Grid>
          </Border>
          
          <!-- Data Rows Container - ItemsControl shares available vertical space -->
          <ItemsControl x:Name="FloatInputRowsPanel" Grid.Row="1">
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <UniformGrid Columns="1"/>
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
          </ItemsControl>
        </Grid>

        <!-- Undo and Clear Buttons -->
        <Grid Grid.Row="2" Margin="0,10,0,10">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          
          <!-- Clear Button -->
          <Button Grid.Column="0" Margin="0,0,5,0" Click="FloatClear_Click"
                  Padding="15,20" BorderThickness="1,0,1,1" BorderBrush="Gray" Background="Orange">
            <StackPanel>
              <TextBlock Text="ðŸ—‘ï¸" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="Clear" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock Text="All float" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- Undo Button -->
          <Button Grid.Column="1" Margin="5,0,0,0" Click="FloatUndo_Click"
                  Padding="15,20" BorderThickness="1,0,1,1" BorderBrush="Gray" Background="Yellow">
            <StackPanel>
              <TextBlock Text="â†¶" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="Undo" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock Text="Last action" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>
        </Grid>

        <!-- Total Float Panel -->
        <Border Grid.Row="3"
                Margin="0,0,0,0"
                Padding="15,20"
                BorderThickness="1,0,1,1"
                BorderBrush="Gray"
                Background="LightGreen">
          <StackPanel>
            <TextBlock Text="ðŸ’°" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock Text="Total Float" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="TotalFloatText" Text="$0.00" FontSize="14" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
          </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <Grid Grid.Row="4" Margin="0,10,0,0">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          
          <!-- Back Button -->
          <Button Grid.Column="0" Margin="0,0,5,0" Click="BackToMain_Click"
                  Padding="15,20" BorderThickness="1,0,1,1" BorderBrush="Gray" Background="LightCoral">
            <StackPanel>
              <TextBlock Text="ðŸ " FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="Back" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock Text="Return to main" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- Add Float Button -->
          <Button Grid.Column="1" Margin="5,0,0,0" Click="SaveFloat_Click"
                  Padding="15,20" BorderThickness="1,0,1,1" BorderBrush="Gray" Background="LightBlue">
            <StackPanel>
              <TextBlock Text="ðŸ’°" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="Add Float" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock Text="Save to cashbox" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>
        </Grid>
      </Grid>

      <!-- RIGHT SIDE: DENOMINATION BUTTONS AND CONTROLS -->
      <Grid Grid.Column="1" Margin="6,12,12,12">
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Row 1 -->
        <!-- 5c Button -->
        <Button x:Name="Float5c" Grid.Row="0" Grid.Column="0"
                Margin="0,0,5,5"
                Padding="0"
                Click="FloatDenom_Click"
                Tag="5"
                BorderThickness="2"
                BorderBrush="Gray"
                Background="#C0C0C0"
                HorizontalContentAlignment="Stretch">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1" VerticalAlignment="Center"
                     Background="#E0FFFFFF" BorderBrush="#404040" BorderThickness="3" CornerRadius="8"
                     Padding="12,8">
              <TextBlock x:Name="Float5cCount" Text="Ã—0" FontSize="32" FontWeight="Bold" 
                         Foreground="#202020" HorizontalAlignment="Center"/>
            </Border>
            <Image Grid.Column="3" x:Name="Float5cImage" Stretch="Uniform" VerticalAlignment="Stretch"/>
            <TextBlock x:Name="Float5cText" Text="5c" Visibility="Collapsed"/>
          </Grid>
        </Button>

        <!-- 10c Button -->
        <Button x:Name="Float10c" Grid.Row="0" Grid.Column="1"
                Margin="5,0,0,5"
                Padding="0"
                Click="FloatDenom_Click"
                Tag="10"
                BorderThickness="2"
                BorderBrush="Gray"
                Background="#C0C0C0"
                HorizontalContentAlignment="Stretch">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="1" x:Name="Float10cImage" Stretch="Uniform" VerticalAlignment="Stretch"/>
            <Border Grid.Column="3" VerticalAlignment="Center"
                     Background="#E0FFFFFF" BorderBrush="#404040" BorderThickness="3" CornerRadius="8"
                     Padding="12,8">
              <TextBlock x:Name="Float10cCount" Text="Ã—0" FontSize="32" FontWeight="Bold" 
                         Foreground="#202020" HorizontalAlignment="Center"/>
            </Border>
            <TextBlock x:Name="Float10cText" Text="10c" Visibility="Collapsed"/>
          </Grid>
        </Button>

        <!-- Row 2 -->
        <!-- 20c Button -->
        <Button x:Name="Float20c" Grid.Row="1" Grid.Column="0"
                Margin="0,5,5,5"
                Padding="0"
                Click="FloatDenom_Click"
                Tag="20"
                BorderThickness="2"
                BorderBrush="Gray"
                Background="#C0C0C0"
                HorizontalContentAlignment="Stretch">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1" VerticalAlignment="Center"
                     Background="#E0FFFFFF" BorderBrush="#404040" BorderThickness="3" CornerRadius="8"
                     Padding="12,8">
              <TextBlock x:Name="Float20cCount" Text="Ã—0" FontSize="32" FontWeight="Bold" 
                         Foreground="#202020" HorizontalAlignment="Center"/>
            </Border>
            <Image Grid.Column="3" x:Name="Float20cImage" Stretch="Uniform" VerticalAlignment="Stretch"/>
            <TextBlock x:Name="Float20cText" Text="20c" Visibility="Collapsed"/>
          </Grid>
        </Button>

        <!-- 50c Button -->
        <Button x:Name="Float50c" Grid.Row="1" Grid.Column="1"
                Margin="5,5,0,5"
                Padding="0"
                Click="FloatDenom_Click"
                Tag="50"
                BorderThickness="2"
                BorderBrush="Gray"
                Background="#C0C0C0"
                HorizontalContentAlignment="Stretch">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="1" x:Name="Float50cImage" Stretch="Uniform" VerticalAlignment="Stretch"/>
            <Border Grid.Column="3" VerticalAlignment="Center"
                     Background="#E0FFFFFF" BorderBrush="#404040" BorderThickness="3" CornerRadius="8"
                     Padding="12,8">
              <TextBlock x:Name="Float50cCount" Text="Ã—0" FontSize="32" FontWeight="Bold" 
                         Foreground="#202020" HorizontalAlignment="Center"/>
            </Border>
            <TextBlock x:Name="Float50cText" Text="50c" Visibility="Collapsed"/>
          </Grid>
        </Button>

        <!-- Row 3 -->
        <!-- $1 Button -->
        <Button x:Name="Float1" Grid.Row="2" Grid.Column="0"
                Margin="0,5,5,5"
                Padding="0"
                Click="FloatDenom_Click"
                Tag="100"
                BorderThickness="2"
                BorderBrush="Gray"
                Background="#B8860B"
                HorizontalContentAlignment="Stretch">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1" VerticalAlignment="Center"
                     Background="#E0FFFFFF" BorderBrush="#404040" BorderThickness="3" CornerRadius="8"
                     Padding="12,8">
              <TextBlock x:Name="Float1Count" Text="Ã—0" FontSize="32" FontWeight="Bold" 
                         Foreground="#202020" HorizontalAlignment="Center"/>
            </Border>
            <Image Grid.Column="3" x:Name="Float1Image" Stretch="Uniform" VerticalAlignment="Stretch"/>
            <TextBlock x:Name="Float1Text" Text="$1" Visibility="Collapsed"/>
          </Grid>
        </Button>

        <!-- $2 Button -->
        <Button x:Name="Float2" Grid.Row="2" Grid.Column="1"
                Margin="5,5,0,5"
                Padding="0"
                Click="FloatDenom_Click"
                Tag="200"
                BorderThickness="2"
                BorderBrush="Gray"
                Background="#B8860B"
                HorizontalContentAlignment="Stretch">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="1" x:Name="Float2Image" Stretch="Uniform" VerticalAlignment="Stretch"/>
            <Border Grid.Column="3" VerticalAlignment="Center"
                     Background="#E0FFFFFF" BorderBrush="#404040" BorderThickness="3" CornerRadius="8"
                     Padding="12,8">
              <TextBlock x:Name="Float2Count" Text="Ã—0" FontSize="32" FontWeight="Bold" 
                         Foreground="#202020" HorizontalAlignment="Center"/>
            </Border>
            <TextBlock x:Name="Float2Text" Text="$2" Visibility="Collapsed"/>
          </Grid>
        </Button>

        <!-- Row 4 -->
        <!-- $5 Button -->
        <Button x:Name="Float5" Grid.Row="3" Grid.Column="0"
                Margin="0,5,5,5"
                Padding="0"
                Click="FloatDenom_Click"
                Tag="500"
                BorderThickness="2"
                BorderBrush="Gray">
          <Grid>
            <Image x:Name="Float5Image" Stretch="Fill"/>
            <Rectangle Fill="#40000000"/>
            <Border VerticalAlignment="Center" HorizontalAlignment="Center"
                     Background="#E0FFFFFF" BorderBrush="#404040" BorderThickness="3" CornerRadius="8"
                     Padding="12,8" Margin="4">
              <TextBlock x:Name="Float5Count" Text="Ã—0" FontSize="32" FontWeight="Bold" 
                         Foreground="#202020" HorizontalAlignment="Center"/>
            </Border>
            <TextBlock x:Name="Float5Text" Text="$5" Visibility="Collapsed"/>
          </Grid>
        </Button>

        <!-- $10 Button -->
        <Button x:Name="Float10" Grid.Row="3" Grid.Column="1"
                Margin="5,5,0,5"
                Padding="0"
                Click="FloatDenom_Click"
                Tag="1000"
                BorderThickness="2"
                BorderBrush="Gray">
          <Grid>
            <Image x:Name="Float10Image" Stretch="Fill"/>
            <Rectangle Fill="#40000000"/>
            <Border VerticalAlignment="Center" HorizontalAlignment="Center"
                     Background="#E0FFFFFF" BorderBrush="#404040" BorderThickness="3" CornerRadius="8"
                     Padding="12,8" Margin="4">
              <TextBlock x:Name="Float10Count" Text="Ã—0" FontSize="32" FontWeight="Bold" 
                         Foreground="#202020" HorizontalAlignment="Center"/>
            </Border>
            <TextBlock x:Name="Float10Text" Text="$10" Visibility="Collapsed"/>
          </Grid>
        </Button>

        <!-- Row 5 -->
