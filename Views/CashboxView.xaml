        <Button x:Name="Float20" Grid.Row="4" Grid.Column="0"
                Margin="0,5,5,5"
                Padding="0"
                Click="FloatDenom_Click"
                Tag="2000"
                BorderThickness="2"
                BorderBrush="Gray">
          <Grid>
            <Image x:Name="Float20Image" Stretch="Fill"/>
            <Rectangle Fill="#40000000"/>
            <Border VerticalAlignment="Center" HorizontalAlignment="Center"
                     Background="#E0FFFFFF" BorderBrush="#404040" BorderThickness="3" CornerRadius="8"
                     Padding="12,8" Margin="4">
              <TextBlock x:Name="Float20Count" Text="Ã—0" FontSize="32" FontWeight="Bold" 
                         Foreground="#202020" HorizontalAlignment="Center"/>
            </Border>
            <TextBlock x:Name="Float20Text" Text="$20" Visibility="Collapsed"/>
          </Grid>
        </Button>

        <!-- $50 Button -->
        <Button x:Name="Float50" Grid.Row="4" Grid.Column="1"
                Margin="5,5,0,5"
                Padding="0"
                Click="FloatDenom_Click"
                Tag="5000"
                BorderThickness="2"
                BorderBrush="Gray">
          <Grid>
            <Image x:Name="Float50Image" Stretch="Fill"/>
            <Rectangle Fill="#40000000"/>
            <Border VerticalAlignment="Center" HorizontalAlignment="Center"
                     Background="#E0FFFFFF" BorderBrush="#404040" BorderThickness="3" CornerRadius="8"
                     Padding="12,8" Margin="4">
              <TextBlock x:Name="Float50Count" Text="Ã—0" FontSize="32" FontWeight="Bold" 
                         Foreground="#202020" HorizontalAlignment="Center"/>
            </Border>
            <TextBlock x:Name="Float50Text" Text="$50" Visibility="Collapsed"/>
          </Grid>
        </Button>

        <!-- Row 6 -->
        <!-- $100 Button -->
        <Button x:Name="Float100" Grid.Row="5" Grid.Column="0"
                Margin="0,5,5,0"
                Padding="0"
                Click="FloatDenom_Click"
                Tag="10000"
                BorderThickness="2"
                BorderBrush="Gray">
          <Grid>
            <Image x:Name="Float100Image" Stretch="Fill"/>
            <Rectangle Fill="#40000000"/>
            <Border VerticalAlignment="Center" HorizontalAlignment="Center"
                     Background="#E0FFFFFF" BorderBrush="#404040" BorderThickness="3" CornerRadius="8"
                     Padding="12,8" Margin="4">
              <TextBlock x:Name="Float100Count" Text="Ã—0" FontSize="32" FontWeight="Bold" 
                         Foreground="#202020" HorizontalAlignment="Center"/>
            </Border>
            <TextBlock x:Name="Float100Text" Text="$100" Visibility="Collapsed"/>
          </Grid>
        </Button>

        <!-- Multiplier Controls -->
        <Grid Grid.Row="5" Grid.Column="1" Margin="5,5,0,0">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>

          <!-- 1x Button -->
          <Button x:Name="Float1xButton" Grid.Column="0"
