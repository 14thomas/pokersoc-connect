<UserControl x:Class="pokersoc_connect.Views.FoodCatalogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- MAIN FOOD VIEW -->
    <Grid x:Name="MainFoodView" Grid.Row="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="3*"/>
      </Grid.ColumnDefinitions>

      <!-- LEFT SIDE: PRODUCT SELECTION AND SALE SUMMARY -->
      <Grid Grid.Column="0" Margin="12,12,6,12">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Food Sales" FontSize="18" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10"/>

        <!-- Instructions -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
          <StackPanel>
            <GroupBox Header="Instructions" Margin="0,0,0,15" Padding="10">
              <StackPanel>
                <TextBlock Text="1. Click on an empty slot to assign a product" FontSize="14" Margin="0,0,0,10"/>
                <TextBlock Text="2. Click on a filled slot to sell that item" FontSize="14" Margin="0,0,0,10"/>
                <TextBlock Text="3. Use Settings to manage your product catalog" FontSize="14" Margin="0,0,0,10"/>
              </StackPanel>
            </GroupBox>

            <!-- Quick Stats -->
            <GroupBox Header="Quick Stats" Padding="10">
              <StackPanel>
                <TextBlock x:Name="TotalProductsText" Text="Products: 0" FontSize="16" Margin="0,0,0,5"/>
                <TextBlock x:Name="FilledSlotsText" Text="Filled Slots: 0/6" FontSize="16"/>
              </StackPanel>
            </GroupBox>
          </StackPanel>
        </ScrollViewer>

      </Grid>

      <!-- RIGHT SIDE: 8 BUTTON GRID (2 COLUMNS x 4 ROWS) -->
      <Grid Grid.Column="1" Margin="6,12,12,12">
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Row 1: Item Buttons 1 & 2 -->
        <Button Grid.Row="0" Grid.Column="0"
                x:Name="ItemButton1"
                Margin="0,0,5,5"
                Padding="15,20"
                Click="ItemButton_Click"
                Tag="1"
                BorderThickness="2"
                BorderBrush="LightGray"
                Background="White">
          <StackPanel>
            <TextBlock x:Name="Item1Icon" Text="ðŸ•" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock x:Name="Item1Name" Text="Empty Slot" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="Item1Price" Text="Click to assign" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
          </StackPanel>
        </Button>

        <Button Grid.Row="0" Grid.Column="1"
                x:Name="ItemButton2"
                Margin="5,0,0,5"
                Padding="15,20"
                Click="ItemButton_Click"
                Tag="2"
                BorderThickness="2"
                BorderBrush="LightGray"
                Background="White">
          <StackPanel>
            <TextBlock x:Name="Item2Icon" Text="ðŸ”" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock x:Name="Item2Name" Text="Empty Slot" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="Item2Price" Text="Click to assign" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
          </StackPanel>
        </Button>

        <!-- Row 2: Item Buttons 3 & 4 -->
        <Button Grid.Row="1" Grid.Column="0"
                x:Name="ItemButton3"
                Margin="0,5,5,5"
                Padding="15,20"
                Click="ItemButton_Click"
                Tag="3"
                BorderThickness="2"
                BorderBrush="LightGray"
                Background="White">
          <StackPanel>
            <TextBlock x:Name="Item3Icon" Text="ðŸ¥¤" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock x:Name="Item3Name" Text="Empty Slot" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="Item3Price" Text="Click to assign" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
          </StackPanel>
        </Button>

        <Button Grid.Row="1" Grid.Column="1"
                x:Name="ItemButton4"
                Margin="5,5,0,5"
                Padding="15,20"
                Click="ItemButton_Click"
                Tag="4"
                BorderThickness="2"
                BorderBrush="LightGray"
                Background="White">
          <StackPanel>
            <TextBlock x:Name="Item4Icon" Text="ðŸ¿" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock x:Name="Item4Name" Text="Empty Slot" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="Item4Price" Text="Click to assign" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
          </StackPanel>
        </Button>

        <!-- Row 3: Item Buttons 5 & 6 -->
        <Button Grid.Row="2" Grid.Column="0"
                x:Name="ItemButton5"
                Margin="0,5,5,5"
                Padding="15,20"
                Click="ItemButton_Click"
                Tag="5"
                BorderThickness="2"
                BorderBrush="LightGray"
                Background="White">
          <StackPanel>
            <TextBlock x:Name="Item5Icon" Text="ðŸ°" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock x:Name="Item5Name" Text="Empty Slot" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="Item5Price" Text="Click to assign" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
          </StackPanel>
        </Button>

        <Border Grid.Row="2" Grid.Column="1"
                x:Name="TotalMoneyPanel"
                Margin="5,5,0,5"
                Padding="15,20"
                BorderThickness="2"
                BorderBrush="Gold"
                Background="LightYellow">
          <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="TotalMoneyIcon" Text="ðŸ’°" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock x:Name="TotalMoneyLabel" Text="Total Made" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="TotalMoneyAmount" Text="$0.00" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0"/>
          </StackPanel>
        </Border>

        <!-- Row 4: Settings & Back -->
        <!-- Settings Button -->
        <Button Grid.Row="3" Grid.Column="0"
                Margin="0,5,5,0"
                Padding="15,20"
                Click="GoToSettings_Click"
                BorderThickness="2"
                BorderBrush="Gray">
          <StackPanel>
            <TextBlock Text="âš™ï¸" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock Text="Settings" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Manage items" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
          </StackPanel>
        </Button>

        <!-- Back Button -->
        <Button Grid.Row="3" Grid.Column="1"
                Margin="5,5,0,0"
                Padding="15,20"
                Click="BackToMain_Click"
                BorderThickness="2"
                BorderBrush="Gray"
                Background="LightCoral">
          <StackPanel>
            <TextBlock Text="ðŸ " FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock Text="Back" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Return to main" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
          </StackPanel>
        </Button>
      </Grid>
    </Grid>

    <!-- PRODUCT SELECTION SCREEN -->
    <Grid x:Name="ProductSelectionView" Grid.Row="0" Visibility="Collapsed">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="3*"/>
      </Grid.ColumnDefinitions>

      <!-- LEFT SIDE: INSTRUCTIONS -->
      <Grid Grid.Column="0" Margin="12,12,6,12">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Select Product" FontSize="18" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10"/>

        <!-- Instructions -->
        <GroupBox Grid.Row="1" Header="Instructions" Margin="0,0,0,15" Padding="10">
          <StackPanel>
            <TextBlock Text="Choose a product from the list on the right to assign to this slot." FontSize="14" Margin="0,0,0,10"/>
            <TextBlock Text="The product will appear on the main screen for quick sales." FontSize="14"/>
          </StackPanel>
        </GroupBox>

        <!-- Action Buttons -->
        <Grid Grid.Row="2">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          
          <!-- Back Button -->
          <Button Grid.Column="0" Click="BackToFoodFromSelection_Click"
                  Padding="15,20" BorderThickness="2" BorderBrush="Gray" Background="LightCoral">
            <StackPanel>
              <TextBlock Text="â¬…ï¸" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="Back" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock Text="Cancel selection" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>
        </Grid>
      </Grid>

      <!-- RIGHT SIDE: PRODUCT LIST -->
      <Grid Grid.Column="1" Margin="6,12,12,12">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Available Products" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Product List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
          <StackPanel x:Name="ProductSelectionPanel"/>
        </ScrollViewer>
      </Grid>
    </Grid>

    <!-- PAYMENT SCREEN -->
    <Grid x:Name="PaymentView" Grid.Row="0" Visibility="Collapsed">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="3*"/>
      </Grid.ColumnDefinitions>

      <!-- LEFT SIDE: SALE DETAILS AND PAYMENT INFO -->
      <Grid Grid.Column="0" Margin="12,12,6,12">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Payment" FontSize="18" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10"/>

        <!-- Sale Details -->
        <GroupBox Grid.Row="1" Header="Sale Details" Margin="0,0,0,15" Padding="10">
          <StackPanel>
            <TextBlock x:Name="PaymentProductName" Text="Product Name" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock x:Name="PaymentProductPrice" Text="$0.00" FontSize="24" FontWeight="Bold" Foreground="Blue" Margin="0,0,0,10"/>
            
            <TextBlock Text="Player ID (Optional):" Margin="0,10,0,5"/>
            <TextBox x:Name="PaymentPlayerIdTextBox" Height="30" Margin="0,0,0,10"
                     TextChanged="PaymentPlayerIdTextBox_TextChanged"/>
          </StackPanel>
        </GroupBox>

        <!-- Payment Summary (Large Box) -->
        <GroupBox Grid.Row="2" Header="Payment Summary" Padding="15" Margin="0,0,0,15">
          <StackPanel>
            <TextBlock x:Name="PaymentSummaryText" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <TextBlock x:Name="PaymentChangeText" FontSize="18" FontWeight="Bold" Margin="0,5,0,10" HorizontalAlignment="Center"/>
            
            <!-- Exact Change Breakdown (Cash only) -->
            <StackPanel x:Name="ChangeBreakdownPanel" Visibility="Collapsed" Margin="0,10,0,0">
              <TextBlock Text="Change Breakdown:" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
              <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ChangeBreakdownList"/>
              </ScrollViewer>
            </StackPanel>
          </StackPanel>
        </GroupBox>

        <!-- Payment Method Selection -->
        <GroupBox Grid.Row="3" Header="Payment Method" Padding="10" Margin="0,0,0,15">
          <Button x:Name="PaymentMethodToggle" Click="PaymentMethodToggle_Click"
                  Padding="15,20" BorderThickness="2" BorderBrush="Gray" Background="LightBlue"
                  HorizontalAlignment="Stretch">
            <StackPanel>
              <TextBlock x:Name="PaymentMethodIcon" Text="ðŸª™" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock x:Name="PaymentMethodText" Text="Chips" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock Text="Click to toggle" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>
        </GroupBox>

        <!-- Action Buttons -->
        <Grid Grid.Row="4">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          
          <!-- Back Button -->
          <Button Grid.Column="0" Margin="0,0,5,0" Click="BackToFood_Click"
                  Padding="15,20" BorderThickness="2" BorderBrush="Gray" Background="LightCoral">
            <StackPanel>
              <TextBlock Text="â¬…ï¸" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="Back" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock Text="Edit item" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- Confirm Payment Button -->
          <Button Grid.Column="1" x:Name="ConfirmPaymentButton" Margin="5,0,0,0" Click="ConfirmPayment_Click"
                  Padding="15,20" BorderThickness="2" BorderBrush="Gray" Background="LightGreen" IsEnabled="False">
            <StackPanel>
              <TextBlock Text="âœ…" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="Confirm" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock Text="Process payment" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>
        </Grid>
      </Grid>

      <!-- RIGHT SIDE: CASH PAYMENT INTERFACE -->
      <Grid x:Name="CashPaymentView" Grid.Column="1" Margin="6,12,12,12">
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cash Denomination Buttons Grid -->
        <Grid Grid.Row="0">
          <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>

          <!-- Row 1 -->
          <!-- 5c Button -->
          <Button x:Name="Cash5c" Grid.Row="0" Grid.Column="0"
                  Margin="0,0,5,5"
                  Padding="15,20"
                  Click="CashDenom_Click"
                  Tag="5"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="5c" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="5c" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Cash5cCount" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- 10c Button -->
          <Button x:Name="Cash10c" Grid.Row="0" Grid.Column="1"
                  Margin="5,0,0,5"
                  Padding="15,20"
                  Click="CashDenom_Click"
                  Tag="10"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="10c" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="10c" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Cash10cCount" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- Row 2 -->
          <!-- 20c Button -->
          <Button x:Name="Cash20c" Grid.Row="1" Grid.Column="0"
                  Margin="0,5,5,5"
                  Padding="15,20"
                  Click="CashDenom_Click"
                  Tag="20"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="20c" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="20c" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Cash20cCount" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- 50c Button -->
          <Button x:Name="Cash50c" Grid.Row="1" Grid.Column="1"
                  Margin="5,5,0,5"
                  Padding="15,20"
                  Click="CashDenom_Click"
                  Tag="50"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="50c" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="50c" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Cash50cCount" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- Row 3 -->
          <!-- $1 Button -->
          <Button x:Name="Cash1" Grid.Row="2" Grid.Column="0"
                  Margin="0,5,5,5"
                  Padding="15,20"
                  Click="CashDenom_Click"
                  Tag="100"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="$1" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="$1" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Cash1Count" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- $2 Button -->
          <Button x:Name="Cash2" Grid.Row="2" Grid.Column="1"
                  Margin="5,5,0,5"
                  Padding="15,20"
                  Click="CashDenom_Click"
                  Tag="200"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="$2" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="$2" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Cash2Count" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- Row 4 -->
          <!-- $5 Button -->
          <Button x:Name="Cash5" Grid.Row="3" Grid.Column="0"
                  Margin="0,5,5,5"
                  Padding="15,20"
                  Click="CashDenom_Click"
                  Tag="500"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="$5" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="$5" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Cash5Count" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- $10 Button -->
          <Button x:Name="Cash10" Grid.Row="3" Grid.Column="1"
                  Margin="5,5,0,5"
                  Padding="15,20"
                  Click="CashDenom_Click"
                  Tag="1000"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="$10" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="$10" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Cash10Count" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- Row 5 -->
          <!-- $20 Button -->
          <Button x:Name="Cash20" Grid.Row="4" Grid.Column="0"
                  Margin="0,5,5,5"
                  Padding="15,20"
                  Click="CashDenom_Click"
                  Tag="2000"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="$20" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="$20" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Cash20Count" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- $50 Button -->
          <Button x:Name="Cash50" Grid.Row="4" Grid.Column="1"
                  Margin="5,5,0,5"
                  Padding="15,20"
                  Click="CashDenom_Click"
                  Tag="5000"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="$50" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="$50" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Cash50Count" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- Row 6 -->
