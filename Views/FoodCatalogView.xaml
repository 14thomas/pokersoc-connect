              <TextBlock x:Name="Cash100Count" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>
        </Grid>
      </Grid>

      <!-- RIGHT SIDE: CHIP PAYMENT INTERFACE -->
      <Grid x:Name="ChipPaymentView" Grid.Column="1" Margin="6,12,12,12" Visibility="Collapsed">

        <!-- Chip Denomination Buttons Grid -->
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>

          <!-- Row 1 -->
          <!-- 5c Chip Button -->
          <Button x:Name="Chip5c" Grid.Row="0" Grid.Column="0"
                  Margin="0,0,5,5"
                  Padding="15,20"
                  Click="ChipDenom_Click"
                  Tag="5"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="5c" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="5c" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Chip5cCount" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- 25c Chip Button -->
          <Button x:Name="Chip25c" Grid.Row="0" Grid.Column="1"
                  Margin="5,0,0,5"
                  Padding="15,20"
                  Click="ChipDenom_Click"
                  Tag="25"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="25c" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="25c" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Chip25cCount" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- Row 2 -->
          <!-- $1 Chip Button -->
          <Button x:Name="Chip1" Grid.Row="1" Grid.Column="0"
                  Margin="0,5,5,5"
                  Padding="15,20"
                  Click="ChipDenom_Click"
                  Tag="100"
                  BorderThickness="2"
                  BorderBrush="Gray">
