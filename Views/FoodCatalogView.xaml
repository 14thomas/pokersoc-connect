                  BorderBrush="Gray"
                  Background="Orange">
            <StackPanel>
              <TextBlock Text="ðŸ—‘ï¸" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="Clear" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock Text="Reset all" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- $100 Button -->
          <Button x:Name="Cash100" Grid.Row="5" Grid.Column="1"
                  Margin="5,5,0,0"
