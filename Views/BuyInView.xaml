                BorderThickness="2" 
                Background="LightGray" 
                Padding="10" 
                Margin="0,0,0,10">
          <StackPanel>
            <TextBlock Text="Current Player" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
