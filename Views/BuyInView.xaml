              <TextBlock x:Name="PlayerIdDisplay" Text="" FontSize="14"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Name: " FontWeight="Bold" Width="80"/>
              <TextBlock x:Name="PlayerNameDisplay" Text="" FontSize="14"/>
            </StackPanel>
          </StackPanel>
