<UserControl x:Class="pokersoc_connect.Views.BuyInView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- STEP 1: CASH INPUT VIEW -->
    <Grid x:Name="CashInputView" Grid.Row="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="3*"/>
      </Grid.ColumnDefinitions>

      <!-- LEFT SIDE: CASH INPUT TABLE -->
      <Grid Grid.Column="0" Margin="12,12,6,12">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cash input header -->
        <TextBlock Text="Cash Received" FontSize="18" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10"/>

        <!-- Custom Cash input table -->
        <StackPanel Grid.Row="1" Background="White">
          <!-- Header Row -->
          <Border BorderBrush="Gray" BorderThickness="1,1,1,1" Background="LightGray">
            <Grid Height="40">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="100"/>
              </Grid.ColumnDefinitions>
              <TextBlock Grid.Column="0" Text="Denomination" FontWeight="Bold" FontSize="14"
                         VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
              <TextBlock Grid.Column="1" Text="Count" FontWeight="Bold" FontSize="14"
                         VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
              <TextBlock Grid.Column="2" Text="Value" FontWeight="Bold" FontSize="14"
                         VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
            </Grid>
          </Border>
          
          <!-- Data Rows -->
          <StackPanel x:Name="CashInputRowsPanel">
            <!-- Rows will be populated dynamically -->
          </StackPanel>
        </StackPanel>

        <!-- Member Number Input -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
          <TextBlock Text="Member #:" VerticalAlignment="Center" Margin="0,0,10,0"/>
          <TextBox x:Name="ScanBox" Width="200" VerticalContentAlignment="Center" KeyDown="ScanBox_KeyDown"/>
          <Button Content="Clear" Margin="10,0,0,0" Click="ClearScan_Click"/>
        </StackPanel>

        <!-- Undo and Clear Buttons -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          
          <!-- Clear Button -->
          <Button Grid.Column="0" Margin="0,0,5,0" Click="Clear_Click"
                  Padding="15,20" BorderThickness="1,0,1,1" BorderBrush="Gray" Background="Orange">
            <StackPanel>
              <TextBlock Text="🗑️" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="Clear" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock Text="All cash" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

              <!-- Undo Button -->
              <Button Grid.Column="1" Margin="5,0,0,0" Click="Undo_Click"
                      Padding="15,20" BorderThickness="1,0,1,1" BorderBrush="Gray" Background="Yellow">
            <StackPanel>
              <TextBlock Text="↶" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="Undo" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock Text="Last action" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>
            </Grid>

        <!-- Total Cash Panel -->
        <Border Grid.Row="4"
                Margin="0,0,0,0"
                Padding="15,20"
                BorderThickness="1,0,1,1"
                BorderBrush="Gray"
                Background="LightGreen">
          <StackPanel>
            <TextBlock Text="💰" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock Text="Total Cash" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="TotalCashText" Text="$0.00" FontSize="14" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
          </StackPanel>
              </Border>

        <!-- Action Buttons -->
        <Grid Grid.Row="5" Margin="0,10,0,0">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          
          <!-- Back Button -->
          <Button Grid.Column="0" Margin="0,0,5,0" Click="Back_Click"
                  Padding="15,20" BorderThickness="1,0,1,1" BorderBrush="Gray" Background="LightCoral">
            <StackPanel>
              <TextBlock Text="🏠" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="Back" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock Text="Return to main" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- Next Button -->
          <Button Grid.Column="1" Margin="5,0,0,0" Click="NextToAmount_Click"
                  Padding="15,20" BorderThickness="1,0,1,1" BorderBrush="Gray" Background="LightBlue">
            <StackPanel>
              <TextBlock Text="➡️" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="Next" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock Text="Set buy-in amount" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>
        </Grid>
      </Grid>

      <!-- RIGHT SIDE: DENOMINATION BUTTONS AND CONTROLS -->
      <Grid Grid.Column="1" Margin="6,12,12,12">
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Denomination Buttons Grid -->
        <Grid Grid.Row="0">
          <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

          <!-- Row 1 -->
          <!-- 5c Button -->
          <Button x:Name="Cash5c" Grid.Row="0" Grid.Column="0"
                  Margin="0,0,5,5"
                  Padding="15,20"
                  Click="CashDenom_Click"
                  Tag="5"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="5c" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="5c" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Cash5cCount" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- 10c Button -->
          <Button x:Name="Cash10c" Grid.Row="0" Grid.Column="1"
                  Margin="5,0,0,5"
                  Padding="15,20"
                  Click="CashDenom_Click"
                  Tag="10"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="10c" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="10c" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Cash10cCount" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- Row 2 -->
          <!-- 20c Button -->
          <Button x:Name="Cash20c" Grid.Row="1" Grid.Column="0"
                  Margin="0,5,5,5"
                  Padding="15,20"
                  Click="CashDenom_Click"
                  Tag="20"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="20c" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="20c" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Cash20cCount" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- 50c Button -->
          <Button x:Name="Cash50c" Grid.Row="1" Grid.Column="1"
                  Margin="5,5,0,5"
                  Padding="15,20"
                  Click="CashDenom_Click"
                  Tag="50"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="50c" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="50c" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Cash50cCount" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- Row 3 -->
          <!-- $1 Button -->
          <Button x:Name="Cash1" Grid.Row="2" Grid.Column="0"
                  Margin="0,5,5,5"
                  Padding="15,20"
                  Click="CashDenom_Click"
                  Tag="100"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="$1" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="$1" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Cash1Count" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- $2 Button -->
          <Button x:Name="Cash2" Grid.Row="2" Grid.Column="1"
                  Margin="5,5,0,5"
                  Padding="15,20"
                  Click="CashDenom_Click"
                  Tag="200"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="$2" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="$2" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Cash2Count" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- Row 4 -->
          <!-- $5 Button -->
          <Button x:Name="Cash5" Grid.Row="3" Grid.Column="0"
                  Margin="0,5,5,5"
                  Padding="15,20"
                  Click="CashDenom_Click"
                  Tag="500"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="$5" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="$5" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Cash5Count" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- $10 Button -->
          <Button x:Name="Cash10" Grid.Row="3" Grid.Column="1"
                  Margin="5,5,0,5"
                  Padding="15,20"
                  Click="CashDenom_Click"
                  Tag="1000"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="$10" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="$10" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Cash10Count" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- Row 5 -->
          <!-- $20 Button -->
          <Button x:Name="Cash20" Grid.Row="4" Grid.Column="0"
                  Margin="0,5,5,5"
                  Padding="15,20"
                  Click="CashDenom_Click"
                  Tag="2000"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="$20" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="$20" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Cash20Count" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- $50 Button -->
          <Button x:Name="Cash50" Grid.Row="4" Grid.Column="1"
                  Margin="5,5,0,5"
                  Padding="15,20"
                  Click="CashDenom_Click"
                  Tag="5000"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="$50" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="$50" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Cash50Count" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- Row 6 -->
          <!-- $100 Button -->
          <Button x:Name="Cash100" Grid.Row="5" Grid.Column="0"
                  Margin="0,5,5,0"
                  Padding="15,20"
                  Click="CashDenom_Click"
                  Tag="10000"
                  BorderThickness="2"
                  BorderBrush="Gray">
            <StackPanel>
              <TextBlock Text="$100" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="$100" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock x:Name="Cash100Count" Text="0" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- Multiplier Controls -->
          <Button Grid.Row="5" Grid.Column="1"
                  Margin="5,5,0,0"
                  Padding="15,20"
                  BorderThickness="2"
                  BorderBrush="Gray"
                  Background="LightBlue"
                  Click="CashMultiplier_Click">
            <StackPanel>
              <TextBlock Text="×" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="Multiplier" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                <TextBlock x:Name="Cash1xText" Text="1x" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="5,0"/>
                <TextBlock Text="|" FontSize="16" HorizontalAlignment="Center" Margin="5,0" Opacity="0.5"/>
                <TextBlock x:Name="Cash5xText" Text="5x" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="5,0"/>
                <TextBlock Text="|" FontSize="16" HorizontalAlignment="Center" Margin="5,0" Opacity="0.5"/>
                <TextBlock x:Name="Cash20xText" Text="20x" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="5,0"/>
              </StackPanel>
            </StackPanel>
          </Button>
        </Grid>
      </Grid>
    </Grid>

    <!-- STEP 2: BUY-IN AMOUNT VIEW -->
    <Grid x:Name="AmountInputView" Grid.Row="0" Visibility="Collapsed">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="3*"/>
      </Grid.ColumnDefinitions>

      <!-- LEFT SIDE: CHANGE BREAKDOWN -->
      <Grid Grid.Column="0" Margin="12,12,6,12">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Change breakdown header -->
        <TextBlock Text="Change Breakdown" FontSize="18" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10"/>

        <!-- Change breakdown table -->
        <StackPanel Grid.Row="1" Background="White">
          <!-- Header Row -->
          <Border BorderBrush="Gray" BorderThickness="1,1,1,1" Background="LightGray">
            <Grid Height="40">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="100"/>
              </Grid.ColumnDefinitions>
              <TextBlock Grid.Column="0" Text="Denomination" FontWeight="Bold" FontSize="14"
                         VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
              <TextBlock Grid.Column="1" Text="Count" FontWeight="Bold" FontSize="14"
                         VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
              <TextBlock Grid.Column="2" Text="Value" FontWeight="Bold" FontSize="14"
                         VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
            </Grid>
          </Border>
          
          <!-- Data Rows -->
          <StackPanel x:Name="ChangeRowsPanel">
            <!-- Rows will be populated dynamically -->
          </StackPanel>
        </StackPanel>

        <!-- Change Display -->
        <Border Grid.Row="2"
                Margin="0,0,0,0"
                Padding="15,20"
                BorderThickness="1,0,1,1"
                BorderBrush="Gray"
                Background="LightGreen">
          <StackPanel>
            <TextBlock Text="🔄" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock Text="Change Due" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="ChangeText" Text="$0.00" FontSize="14" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
          </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          
          <!-- Back Button -->
          <Button Grid.Column="0" Margin="0,0,5,0" Click="BackToCash_Click"
                  Padding="15,20" BorderThickness="1,0,1,1" BorderBrush="Gray" Background="LightCoral">
            <StackPanel>
              <TextBlock Text="⬅️" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="Back" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock Text="Edit cash" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>

          <!-- Confirm Button -->
          <Button Grid.Column="1" Margin="5,0,0,0" Click="ConfirmBuyIn_Click"
                  Padding="15,20" BorderThickness="1,0,1,1" BorderBrush="Gray" Background="LightGreen">
            <StackPanel>
              <TextBlock Text="✅" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8"/>
              <TextBlock Text="Confirm" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
              <TextBlock Text="Process buy-in" FontSize="10" HorizontalAlignment="Center" Opacity="0.7"/>
            </StackPanel>
          </Button>
        </Grid>
      </Grid>

      <!-- RIGHT SIDE: AMOUNT INPUT AND NUMBERPAD -->
      <Grid Grid.Column="1" Margin="6,12,12,12">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Amount input header -->
        <TextBlock Text="Buy-in Amount" FontSize="18" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10"/>

        <!-- Amount Display -->
        <Border Grid.Row="1" Background="LightYellow" BorderBrush="Gray" BorderThickness="2" 
                CornerRadius="5" Padding="20" Margin="0,0,0,20">
          <StackPanel>
            <TextBlock Text="Cash Received:" FontSize="14" HorizontalAlignment="Center" Opacity="0.7"/>
            <TextBlock x:Name="CashReceivedText" Text="$0.00" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Buy-in Amount:" FontSize="14" HorizontalAlignment="Center" Opacity="0.7" Margin="0,10,0,0"/>
            <TextBlock x:Name="BuyInAmountText" Text="$0.00" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Blue"/>
      </StackPanel>
        </Border>

        <!-- Numberpad -->
        <Grid Grid.Row="2">
          <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>

          <!-- Row 1 -->
          <Button Grid.Row="0" Grid.Column="0" Content="1" FontSize="24" FontWeight="Bold" Margin="2" Click="Number_Click" Tag="1"/>
          <Button Grid.Row="0" Grid.Column="1" Content="2" FontSize="24" FontWeight="Bold" Margin="2" Click="Number_Click" Tag="2"/>
          <Button Grid.Row="0" Grid.Column="2" Content="3" FontSize="24" FontWeight="Bold" Margin="2" Click="Number_Click" Tag="3"/>

          <!-- Row 2 -->
          <Button Grid.Row="1" Grid.Column="0" Content="4" FontSize="24" FontWeight="Bold" Margin="2" Click="Number_Click" Tag="4"/>
          <Button Grid.Row="1" Grid.Column="1" Content="5" FontSize="24" FontWeight="Bold" Margin="2" Click="Number_Click" Tag="5"/>
          <Button Grid.Row="1" Grid.Column="2" Content="6" FontSize="24" FontWeight="Bold" Margin="2" Click="Number_Click" Tag="6"/>

          <!-- Row 3 -->
          <Button Grid.Row="2" Grid.Column="0" Content="7" FontSize="24" FontWeight="Bold" Margin="2" Click="Number_Click" Tag="7"/>
          <Button Grid.Row="2" Grid.Column="1" Content="8" FontSize="24" FontWeight="Bold" Margin="2" Click="Number_Click" Tag="8"/>
          <Button Grid.Row="2" Grid.Column="2" Content="9" FontSize="24" FontWeight="Bold" Margin="2" Click="Number_Click" Tag="9"/>

          <!-- Row 4 -->
          <Button Grid.Row="3" Grid.Column="0" Content="." FontSize="24" FontWeight="Bold" Margin="2" Click="Number_Click" Tag="."/>
          <Button Grid.Row="3" Grid.Column="1" Content="0" FontSize="24" FontWeight="Bold" Margin="2" Click="Number_Click" Tag="0"/>
          <Button Grid.Row="3" Grid.Column="2" Content="⌫" FontSize="24" FontWeight="Bold" Margin="2" Click="Backspace_Click"/>

          <!-- Clear Button - Separate row to avoid overlap -->
          <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Content="Clear" FontSize="18" FontWeight="Bold" 
                  Margin="2" Click="ClearAmount_Click" Background="LightCoral" Height="40"/>
        </Grid>
      </Grid>
    </Grid>

  </Grid>
</UserControl>
