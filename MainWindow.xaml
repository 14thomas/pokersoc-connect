<Window x:Class="pokersoc_connect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="pokersoc-connect" Height="480" Width="900" WindowStartupLocation="CenterScreen">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Top bar -->
    <StackPanel Orientation="Horizontal">
      <Button Content="Buy-in" Click="BuyIn_Click" Margin="0,0,8,0"/>
      <Button Content="Cash-out" Click="CashOut_Click" Margin="0,0,16,0"/>
      <TextBox x:Name="ScanBox"
               Width="220"
               VerticalContentAlignment="Center"
               ToolTip="Scan member #"
               Margin="0,0,0,0"/>
      <!-- (Optional) simple hint label -->
      <!--<TextBlock Text="Scan member #" Foreground="Gray" Margin="8,3,0,0"/>-->
    </StackPanel>

    <!-- Transactions grid -->
    <DataGrid x:Name="TxGrid"
              Grid.Row="1"
              AutoGenerateColumns="True"
              IsReadOnly="True"/>

    <!-- Status bar -->
    <StatusBar Grid.Row="2" Margin="0,8,0,0">
      <StatusBarItem>
        <TextBlock x:Name="StatusText" Text="Ready."/>
      </StatusBarItem>
    </StatusBar>
  </Grid>
</Window>
